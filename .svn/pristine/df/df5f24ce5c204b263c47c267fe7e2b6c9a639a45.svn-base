/**
 * 部门列表
 */
import React, {Component} from 'react';
import Qs from 'qs';
import axios from 'axios';
import { Table, Button, message } from 'antd';
import * as types from '../../../contants/actionTypes/organize';
import API from '../../../contants/ApiRoot';
import GroupAddModal from './Add'

class GroupList extends Component {
	constructor(props){
		super(props);
		this.state = {
			visible: false,
			groupInfo: {},
			type: 'new'
		};
		this.handleEdit = this.handleEdit.bind(this);
		this.handleDel = this.handleDel.bind(this);
		this.handleShowModal = this.handleShowModal.bind(this);
		this.handleHideModal = this.handleHideModal.bind(this);
	}

	componentDidMount() {
		this.fetchData();
	}

	fetchData() {
		const { actions } = this.props;
		axios.get(API[types.ORGANIZE_GROUP_LIST_GET], {})
		.then(function (response) {
			if (response.statusText === 'OK') {
				if (response.data.status == 1) {
					actions.getGroupList(response.data.data);
				} else {
					console.log(response.data.msg);
					message.error(response.data.msg);
				}
			}
		})
		.catch(function (error) {
			console.log(error);
		});
	}

	handleEdit(value) {
		this.setState({
			groupInfo: {
				groupName: value.group_name,
				pid: value.pid,
				group_id: value.group_id
			},
			visible: true,
			type: 'edit'
		})
	}

	handleDel(id) {
		const { actions } = this.props;

		axios({
			method: 'post',
			url: API[types.ORGANIZE_GROUP_DEL_POST],
			data: {
				group_id: id
			},
			transformRequest: [function (data, headers) {
				data = Qs.stringify(data);
				return data;
			}]
		})
		.then((response) => {
			if (response.statusText === 'OK') {
				if (response.data.status == 1) {
					actions.delGroup(id);
				} else {
					message.error(response.data.msg);
				}
			}
		})
		.catch((error) => {
			console.log(error);
		});
	}

	handleShowModal() {
		this.setState({
			groupInfo: null,
			visible: true,
			type: 'new'
		});
	}

	handleHideModal() {
		this.setState({visible: false});
	}

	getColumns() {
		let columns = [
			{
				title: '部门',
				dataIndex: 'group_name',
				key: 'group_name',
			},
			{
				title: '操作',
				render: (text, record, index) => {
					return (
						<span>
							<span className="option-btn" onClick={() => this.handleEdit(record)}>编辑</span>
							<span className="ant-divider" />
							<span className="option-btn" onClick={() => this.handleDel(record.group_id)}>删除</span>
						</span>
					)
				}
			}
		];

		return columns;
	}

	render() {
		const {data, actions} = this.props;
		const columns = this.getColumns();

		return (
			<div>
				<Button type="primary" onClick={this.handleShowModal}>
					添加部门
				</Button>
				<Table rowKey={"group_id"} columns={columns} dataSource={data}/>
				<GroupAddModal
					actions={actions}
					selectList={data}
					groupInfo={this.state.groupInfo || {}}
					type={this.state.type}
					visible={this.state.visible}
					onShowModal={this.handleShowModal}
					onHideModal={this.handleHideModal}
				/>
			</div>
		)
	}
}

export default GroupList;
