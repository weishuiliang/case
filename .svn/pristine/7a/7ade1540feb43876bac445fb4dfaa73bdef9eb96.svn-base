/**
 * 常用样式
 */
.scroll-list {
    overflow-y: auto;
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
    overflow-scrolling: touch; //解决ios页面滚动不流畅
}

//button
.btn-adapt {
    background-color: #33cd4e;
    color: #ffffff;
    border-radius: 20px;
    padding: 20px;
    font-size: 30px;
    line-height: 40px;
    box-sizing: border-box;
}

.option-btn {
    color: #108ee9;
    cursor: pointer;
}