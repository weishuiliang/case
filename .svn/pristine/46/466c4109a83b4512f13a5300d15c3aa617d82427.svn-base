/**
 * 组织结构 actions
 */
import * as types from '../contants/actionTypes/organize';

/**
 * 获取人员列表
 * @param data
 * @returns {{type, data: *}}
 */
export const getPersonList = (data) => {
	return {
		type: types.ORGANIZE_PERSON_LIST_GET,
		data
	}
};

/**
 * 添加人员
 * @param data
 * @returns {{type, data: *}}
 */
export const addPerson = (data) => {
	return {
		type: types.ORGANIZE_PERSON_ADD_POST,
		data
	}
};

/**
 * 编辑人员
 * @param data
 * @returns {{type, data: *}}
 */
export const editPerson = (data) => {
	return {
		type: types.ORGANIZE_PERSON_EDIT_POST,
		data
	}
};

export const delPerson = (id) => {
	return {
		type: types.ORGANIZE_PERSON_DEL_POST,
		id
	}
};

